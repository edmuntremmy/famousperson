@bot.message_handler(commands=['start'])
def send_message_weelcome(message):
    chat_id = message.chat.id
    markup = types.ReplyKeyboardRemove(selective=False)
    bot.send_message(chat_id, f"–ø—Ä–∏–≤–µ—Ç! —è –±–æ—Ç, —è –º–æ–≥—É —Ä–∞—Å—Å–∫–∞–∑–∞—Ç—å —Ç–µ–±–µ –æ –∏–∑–≤–µ—Å—Ç–Ω—ã—Ö –ª—é–¥—è—Ö. ",reply_markup=markup)
    ask_class(message)


@bot.message_handler(commands=['chapter'])
def ask_class(message):
    markup = types.InlineKeyboardMarkup(row_width=3)
    class1 = types.InlineKeyboardButton("–Ω–∞—É–∫–∞", callback_data='science')
    class2 = types.InlineKeyboardButton("—Å–ø–æ—Ä—Ç", callback_data='sport')
    class3 = types.InlineKeyboardButton("–∏—Å–∫—É—Å—Å—Ç–≤–æ", callback_data='art')
    class4 = types.InlineKeyboardButton("–º—É–∑—ã–∫–∞", callback_data='music')
    markup.add(class1, class2, class3, class4)
    bot.send_message(message.chat.id,  "–í—ã–±–µ—Ä–∏—Ç–µ –≤–∏–¥ –¥–µ—è—Ç–µ–ª—å–Ω–æ—Å—Ç–∏ –∏–∑–≤–µ—Å—Ç–Ω–æ–π –ª–∏—á–Ω–æ—Å—Ç–∏", reply_markup=markup)


def ask_science(message):
    markup = types.InlineKeyboardMarkup(row_width=3)
    science1 = types.InlineKeyboardButton("–ú–µ–Ω–¥–µ–ª–µ–µ–≤", callback_data='mendeleev')
    science2 = types.InlineKeyboardButton("–≠–π–Ω—à—Ç–µ–π–Ω", callback_data='enshtein')
    science3 = types.InlineKeyboardButton("–¢–µ—Å–ª–∞", callback_data='tesla')
    markup.add(science1, science2, science3)
    bot.send_message(message.chat.id,"–ø–æ–ø–∞–¥–∞–µ–º –≤ —Ä–∞–∑–¥–µ–ª –Ω–∞—É–∫–∏", reply_markup=markup)

def ask_sport(message):
    markup = types.InlineKeyboardMarkup(row_width=3)
    sport1 = types.InlineKeyboardButton("–õ–∏–æ–Ω–µ–ª—å –ú–µ—Å—Å–∏ ", callback_data='messi')
    sport2 = types.InlineKeyboardButton("–ê–ª–µ–∫—Å–∞–Ω–¥—Ä –û–≤–µ—á–∫–∏–Ω ", callback_data='ovechkin')
    sport3 = types.InlineKeyboardButton("–ú–∞–π–∫–ª –î–∂–æ—Ä–¥–∞–Ω ", callback_data='jordan')
    markup.add(sport1, sport2, sport3)
    bot.send_message(message.chat.id,"–ø–æ–ø–∞–¥–∞–µ–º –≤ —Ä–∞–∑–¥–µ–ª —Å–ø–æ—Ä—Ç–∞", reply_markup=markup)


def ask_music(message):
    markup = types.InlineKeyboardMarkup(row_width=3)
    music1 = types.InlineKeyboardButton("–ë–µ—Ç—Ö–æ–≤–µ–Ω", callback_data='bethoven')
    music2 = types.InlineKeyboardButton("–ß–∞–π–∫–æ–≤—Å–∫–∏–π", callback_data='tchaikovsky')
    music3 = types.InlineKeyboardButton("–†–∏–º—Å–∫–∏–π-–ö–æ—Ä—Å–∞–∫–æ–≤", callback_data='korsakov')
    markup.add(music1, music2, music3)
    bot.send_message(message.chat.id, "–ø–æ–ø–∞–¥–∞–µ–º –≤ —Ä–∞–∑–¥–µ–ª –º—É–∑—ã–∫–∏", reply_markup=markup)

def ask_art(message):
    markup = types.InlineKeyboardMarkup(row_width=3)
    art1 = types.InlineKeyboardButton("–í–∞—Å–Ω–µ—Ü–æ–≤", callback_data='vasnecov')
    art2 = types.InlineKeyboardButton("–õ–µ–æ–Ω–∞—Ä–¥–æ –¥–∞ –í–∏–Ω—á–∏", callback_data='leonardo')
    art3 = types.InlineKeyboardButton("–°–∞–ª—å–≤–∞–¥–æ—Ä –î–∞–ª–∏", callback_data='dali')
    markup.add(art1, art2, art3)
    bot.send_message(message.chat.id, "–ø–æ–ø–∞–¥–∞–µ–º –≤ —Ä–∞–∑–¥–µ–ª –∏—Å–∫—É—Å—Å—Ç–≤–∞", reply_markup=markup)

@bot.callback_query_handler(func=lambda call: True)
def callback_processing(call):
     if call.data == "science":
        bot.edit_message_text(chat_id=call.message.chat.id, message_id=call.message.message_id, text="—ç—Ç–æ –Ω–∞—É–∫–∞", reply_markup=None)
        ask_science(call.message)
     if call.data == "sport":
        bot.edit_message_text(chat_id=call.message.chat.id, message_id=call.message.message_id, text="—ç—Ç–æ —Å–ø–æ—Ä—Ç", reply_markup=None)
        ask_sport(call.message)
     if call.data == "art":
        bot.edit_message_text(chat_id=call.message.chat.id, message_id=call.message.message_id, text="—ç—Ç–æ –∏—Å–∫—É—Å—Å—Ç–≤–æ", reply_markup=None)
        ask_art(call.message)
     if call.data == "music":
        bot.edit_message_text(chat_id=call.message.chat.id, message_id=call.message.message_id, text="—ç—Ç–æ –º—É–∑—ã–∫–∞", reply_markup=None)
        ask_music(call.message)
     a = call.data
     print(a)
     b.append(call.data)
     print(b)

     if call.data in info_about_famous_person:
         person = info_about_famous_person[call.data]
         bot.send_photo(
             chat_id=call.message.chat.id,
             photo=person['photo'],
             caption=person['name']
         )

         markup = types.InlineKeyboardMarkup(row_width=3)
         back1 = types.InlineKeyboardButton("–Ω–∞–∑–∞–¥ üîô", callback_data='1')
         markup.add(back1)
         bot.send_message(chat_id=call.message.chat.id, text= person['text'])
         bot.send_message(chat_id=call.message.chat.id, text=person['url'], reply_markup=markup)


bot.answer_callback_query(call.id, "–æ—Ç–ø—Ä–∞–≤–ª—è—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é . . .")
     if '1' in b:
         if b[-2] in ['enshtein', 'mendeleev', 'tesla']:
            ask_science(call.message)
         if b[-2] in ['messi', 'ovechkin', 'jordan' ]:
            ask_sport(call.message)
         if b[-2] in ['messi', 'tchaikovsky', 'korsakov']:
            ask_art(call.message)
         if b[-2] in ['vasnecov', 'leonardo', 'korsakov']:
            ask_music(call.message)




bot.polling(non_stop=True)
